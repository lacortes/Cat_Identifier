<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Hold Breed Name and Breed Description-->
        <LinearLayout
            android:layout_weight="45"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/breed_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:gravity="center"
                tools:text="Name of Breed"/>

            <ImageView
                android:id="@+id/breed_imageview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--END of Hold Breed Name and Breed Description-->

        <TextView
            android:id="@+id/breed_info_textview"
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"/>

        <ListView
            android:id="@+id/breed_characteristic_list"
            android:stackFromBottom="false"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </ListView>

        <!--Filler-->
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

</ScrollView>